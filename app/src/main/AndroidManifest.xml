<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.prototype">

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="PUI Tracing"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.UniKL.PUITrace.UserProfile"></activity>
        <activity android:name="com.UniKL.PUITrace.Report" />
        <activity android:name="com.UniKL.PUITrace.Tracing" />
        <activity android:name="com.UniKL.PUITrace.AdminUserInformation" />
        <activity android:name=".AdminUpdateRecord" />
        <activity android:name=".AdminUpdateNotif" />
        <activity android:name=".AdminPostNoti" />
        <activity android:name=".AdminNoti" />
        <activity android:name=".AdminHome" />
        <activity android:name=".Notification" />
        <activity android:name=".QRcode" />
        <activity
            android:name=".HomeAct"
            android:label="@string/title_activity_home" />
        <activity android:name=".Registration" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CaptureAct"
            android:screenOrientation="fullSensor"
            android:stateNotNeeded="true"
            android:windowSoftInputMode="stateAlwaysHidden" />
    </application>

</manifest>