<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/backgroundcolor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:textColor="#ffd800"
                android:textSize="40dp"
                android:background="@drawable/uniklpng">
            </ImageView>

        </RelativeLayout>

        <GridLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnOrderPreserved="true"
            android:layout_gravity="center">

            <androidx.cardview.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="7dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp"
                android:layout_marginTop="100sp"
                android:background="#000000"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="16dp"
                    android:paddingTop="40dp"
                    android:orientation="vertical"
                    android:background="@null"
                    android:columnCount="1"
                    android:rowCount="2">

                    <GridLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:text="Name"
                        android:layout_gravity="left">
                    </TextView>
                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"
                        android:id="@+id/tvuserName"
                        android:paddingTop="15sp"
                        android:fontFamily="sans-serif-medium"
                        >
                    </TextView>

                    </GridLayout>

                    <GridLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:text="Class 1:"
                        android:layout_gravity="left">
                    </TextView>
                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:id="@+id/tvclass1"
                        android:layout_gravity="center"
                        android:fontFamily="sans-serif-medium">
                    </TextView>
                    </GridLayout>
                    <GridLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:text="Class 2:"
                        android:layout_gravity="left">
                    </TextView>
                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:id="@+id/tvclass2"
                        android:layout_gravity="center"
                        android:fontFamily="sans-serif-medium">
                    </TextView>
                    </GridLayout>
                    <GridLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:text="Class 3:"
                        android:layout_gravity="left">
                    </TextView>
                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:id="@+id/tvclass3"
                        android:layout_gravity="center"
                        android:fontFamily="sans-serif-medium">
                    </TextView>
                    </GridLayout>

                    <GridLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:text="Class 4:"
                        android:layout_gravity="left"
                       >
                    </TextView>
                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:id="@+id/tvclass4"
                        android:layout_gravity="center"
                        android:fontFamily="sans-serif-medium">
                    </TextView>
                    </GridLayout>

                    <GridLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:text="Class 5:"
                        android:layout_gravity="left">
                    </TextView>
                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:id="@+id/tvclass5"
                        android:layout_gravity="center"
                        android:fontFamily="sans-serif-medium">
                    </TextView>
                    </GridLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </GridLayout>

    </LinearLayout>
</ScrollView>